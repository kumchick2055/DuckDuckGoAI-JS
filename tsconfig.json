{
  "compilerOptions": {
    "target": "es2016",                                 
    "module": "commonjs",                               
    "types": ["node"],                                   
    "resolveJsonModule": true,                  
    "declaration": true,                       
    "outDir": "./dist",    
    "esModuleInterop": true,                        
    "forceConsistentCasingInFileNames": true,        
    "strict": true,                                      
    "skipLibCheck": true                              
  }
}
